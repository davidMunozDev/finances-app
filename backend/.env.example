# PostgreSQL Database Configuration
# For local development or direct connection:
# DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# For Supabase (direct connection):
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# For Supabase (connection pooler - recommended for serverless/Vercel):
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres?pgbouncer=true

# SSL Configuration (set to 'true' for most cloud providers like Supabase)
DB_SSL=false

JWT_SECRET=
JWT_EXPIRES_IN=

# JWT tokens configuration
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_DAYS=7

# OpenAI Configuration (for AI Assistant)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
